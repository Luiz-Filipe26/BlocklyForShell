{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": ["commands", "operators", "controls", "categories"],
  "$defs": {
    "validationDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["regex", "errorMessage"],
      "properties": {
        "regex": {
          "type": "string"
        },
        "errorMessage": {
          "type": "string"
        }
      }
    },
    "syntaxRuleDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["regexPattern"],
      "properties": {
        "regexPattern": {
          "type": "string"
        },
        "errorMessage": {
          "type": ["string", "null"],
          "description": "Se nulo, indica que o padrão é válido. Se string, é a mensagem de erro para um erro conhecido."
        }
      }
    },
    "cardinalityDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["min", "max"],
      "properties": {
        "min": {
          "type": "integer",
          "minimum": 0
        },
        "max": {
          "oneOf": [
            {
              "type": "integer",
              "minimum": 0
            },
            {
              "const": "unlimited"
            }
          ]
        }
      }
    },
    "slotDef": {
      "type": "object",
      "additionalProperties": false,
      "required": ["name", "type", "check"],
      "properties": {
        "name": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["statement", "value", "dummy"]
        },
        "check": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "symbol": {
          "type": "string"
        },
        "symbolPlacement": {
          "type": "string",
          "enum": ["before", "after"]
        },
        "syntaxPrefix": {
          "type": "string"
        },
        "obligatory": {
          "type": "boolean"
        }
      }
    },
    "hexColor": {
      "type": "string",
      "pattern": "^#[0-9a-fA-F]{6}$"
    },
    "defaultValueDef": {
      "type": ["string", "number", "boolean"]
    }
  },
  "properties": {
    "$schema": {
      "type": "string"
    },
    "commands": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "shellCommand", "label", "description"],
        "properties": {
          "id": {
            "type": "string"
          },
          "shellCommand": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "color": {
            "$ref": "#/$defs/hexColor"
          },
          "optionColor": {
            "$ref": "#/$defs/hexColor"
          },
          "options": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["flag", "description"],
              "properties": {
                "flag": {
                  "type": "string"
                },
                "longFlag": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "argument": {
                  "type": "object",
                  "additionalProperties": false,
                  "required": ["type", "label"],
                  "properties": {
                    "type": {
                      "type": "string",
                      "enum": ["string", "number", "boolean", "file", "folder"]
                    },
                    "label": {
                      "type": "string"
                    },
                    "defaultValue": {
                      "$ref": "#/$defs/defaultValueDef"
                    },
                    "validations": {
                      "type": "array",
                      "items": {
                        "$ref": "#/$defs/validationDef"
                      }
                    }
                  }
                }
              }
            }
          },
          "exclusiveOptions": {
            "type": "array",
            "items": {
              "type": "array",
              "items": {
                "type": "string"
              },
              "minItems": 2
            }
          },
          "operands": {
            "type": "array",
            "items": {
              "type": "object",
              "additionalProperties": false,
              "required": ["id", "label", "description", "type", "cardinality"],
              "properties": {
                "id": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "description": {
                  "type": "string"
                },
                "color": {
                  "$ref": "#/$defs/hexColor"
                },
                "type": {
                  "type": "string",
                  "enum": ["string", "number", "file", "folder", "boolean"]
                },
                "defaultValue": {
                  "$ref": "#/$defs/defaultValueDef"
                },
                "cardinality": {
                  "$ref": "#/$defs/cardinalityDef"
                },
                "validations": {
                  "type": "array",
                  "items": {
                    "$ref": "#/$defs/validationDef"
                  }
                }
              }
            }
          },
          "operandIdsSequenceDelimiter": {
            "type": "string",
            "description": "Caractere usado para separar IDs na validação de sequência (ex: '-')."
          },
          "operandSyntaxRules": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/syntaxRuleDef"
            }
          }
        }
      }
    },
    "operators": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "label", "description", "slots"],
        "properties": {
          "id": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "color": {
            "$ref": "#/$defs/hexColor"
          },
          "slots": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/slotDef"
            }
          },
          "slotsWithImplicitData": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    },
    "controls": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["id", "shellCommand", "label", "description", "slots"],
        "properties": {
          "id": {
            "type": "string"
          },
          "shellCommand": {
            "type": "string"
          },
          "label": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "color": {
            "$ref": "#/$defs/hexColor"
          },
          "syntaxEnd": {
            "type": "string"
          },
          "slots": {
            "type": "array",
            "items": {
              "$ref": "#/$defs/slotDef"
            }
          }
        }
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": ["name", "commands"],
        "properties": {
          "name": {
            "type": "string"
          },
          "commands": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }
}
