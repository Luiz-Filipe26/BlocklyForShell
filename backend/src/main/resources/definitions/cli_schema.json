{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "type": "object",
    "additionalProperties": false,
    "required": [
        "$schema",
        "commands",
        "operators",
        "controls",
        "categories"
    ],
    "properties": {
        "commands": {
            "type": "array",
            "items": {
                "type": "object",
                "additionalProperties": false,
                "required": [
                    "id",
                    "shellCommand",
                    "label",
                    "description"
                ],
                "properties": {
                    "id": {
                        "type": "string"
                    },
                    "shellCommand": {
                        "type": "string"
                    },
                    "label": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "color": {
                        "type": "string",
                        "pattern": "^#[0-9a-fA-F]{6}$"
                    },
                    "optionColor": {
                        "type": "string",
                        "pattern": "^#[0-9a-fA-F]{6}$"
                    },
                    "options": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "flag",
                                "description"
                            ],
                            "properties": {
                                "flag": {
                                    "type": "string"
                                },
                                "longFlag": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "argument": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "type",
                                        "label"
                                    ],
                                    "properties": {
                                        "type": {
                                            "type": "string",
                                            "enum": [
                                                "string",
                                                "number",
                                                "boolean",
                                                "file",
                                                "folder"
                                            ]
                                        },
                                        "label": {
                                            "type": "string"
                                        },
                                        "defaultValue": {
                                            "type": [
                                                "string",
                                                "number",
                                                "boolean"
                                            ]
                                        },
                                        "validations": {
                                            "type": "array",
                                            "items": {
                                                "type": "object",
                                                "additionalProperties": false,
                                                "required": [
                                                    "regex",
                                                    "errorMessage"
                                                ],
                                                "properties": {
                                                    "regex": {
                                                        "type": "string"
                                                    },
                                                    "errorMessage": {
                                                        "type": "string"
                                                    }
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "exclusiveOptions": {
                        "type": "array",
                        "items": {
                            "type": "array",
                            "items": {
                                "type": "string"
                            },
                            "minItems": 2
                        }
                    },
                    "operands": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "additionalProperties": false,
                            "required": [
                                "id",
                                "label",
                                "description",
                                "type",
                                "cardinality"
                            ],
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "label": {
                                    "type": "string"
                                },
                                "description": {
                                    "type": "string"
                                },
                                "color": {
                                    "type": "string",
                                    "pattern": "^#[0-9a-fA-F]{6}$"
                                },
                                "type": {
                                    "type": "string",
                                    "enum": [
                                        "string",
                                        "number",
                                        "file",
                                        "folder",
                                        "boolean"
                                    ]
                                },
                                "defaultValue": {
                                    "type": [
                                        "string",
                                        "number",
                                        "boolean"
                                    ]
                                },
                                "cardinality": {
                                    "type": "object",
                                    "additionalProperties": false,
                                    "required": [
                                        "min",
                                        "max"
                                    ],
                                    "properties": {
                                        "min": {
                                            "type": "integer",
                                            "minimum": 0
                                        },
                                        "max": {
                                            "oneOf": [
                                                {
                                                    "type": "integer",
                                                    "minimum": 0
                                                },
                                                {
                                                    "type": "string",
                                                    "enum": [
                                                        "unlimited"
                                                    ]
                                                }
                                            ]
                                        }
                                    }
                                },
                                "validations": {
                                    "type": "array",
                                    "items": {
                                        "type": "object",
                                        "additionalProperties": false,
                                        "required": [
                                            "regex",
                                            "errorMessage"
                                        ],
                                        "properties": {
                                            "regex": {
                                                "type": "string"
                                            },
                                            "errorMessage": {
                                                "type": "string"
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
